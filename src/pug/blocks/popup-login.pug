.popup(class=`js-popup-login` data-popup-id='login')
	.popup__in
		.popup__content
			button.popup_close.js-popup-close(type="button" aria-label="Close Popup" tabindex="0")
			.popup__content_in
				h2.popup__content_title Войти в свой аккаунт
				.popup__content_form_w
					form(action="", method="post")
						.popup__content_form
							.popup__content_form_input_list
								.popup__content_form_item
									+form_input({
										placeholder: 'Электронная почта',
										type: 'mail',
										id: 'login_mail'
									})
								.popup__content_form_item
									+form_input({
										placeholder: 'Пароль',
										type: 'password',
										class: 'form_input__element',
										id: 'login_pas'
									})

							a(href="#").popup__content_link.js-popup-pas-trigger Восстановить пароль

							.popup__content_form_btn_w
								button(type="submit").btn_6.popup__content_form_btn Войти
							.popup__content_form_btn_w
								a(href="#").btn_5.popup__content_form_btn.js-popup-reg-trigger Зарегистрироваться
